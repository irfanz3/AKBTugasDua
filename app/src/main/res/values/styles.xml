<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonTextHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textDefault</item>
        <item name="android:textSize">@dimen/font32</item>
    </style>

    <style name="CommonTextBody" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textDefault</item>
        <item name="android:textSize">@dimen/font14</item>
    </style>

</resources>
